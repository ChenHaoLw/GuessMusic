<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      >
    <FrameLayout
        android:id="@+id/id_fl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageButton
          android:id="@+id/id_delete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/delete_selector"
          />
      <ImageView
          android:layout_width="32dp"
          android:layout_height="30dp"
          android:background="@drawable/game_coin_icon"
          android:layout_gravity="bottom"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="5dp"
          />
      <TextView
          android:id="@+id/id_delete_price"
          android:layout_gravity="bottom|right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@integer/price_delete"
          android:textColor="@color/colorWhite"
          android:textStyle="bold"
          android:textSize="14sp"
          android:layout_marginBottom="15dp"
          android:layout_marginRight="15dp"
          />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/id_fl_2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
      <ImageButton
          android:id="@+id/id_prompt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/prompt_selector"
          />
      <ImageView
          android:layout_width="32dp"
          android:layout_height="30dp"
          android:background="@drawable/game_coin_icon"
          android:layout_gravity="bottom"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="5dp"
          />
      <TextView
          android:id="@+id/id_prompt_price"
          android:layout_gravity="bottom|right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@integer/price_prompt"
          android:textColor="@color/colorWhite"
          android:textStyle="bold"
          android:textSize="14sp"
          android:layout_marginBottom="15dp"
          android:layout_marginRight="15dp"
          />
    </FrameLayout>

  </LinearLayout>

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_level_title"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/id_game_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        />
  </FrameLayout>

  <ImageButton
      android:id="@+id/id_share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/share_selector"
      />

</RelativeLayout>
